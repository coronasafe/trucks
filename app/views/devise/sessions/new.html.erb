<div class="bg-gray-50 flex flex-col justify-center py-6 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl leading-9 font-extrabold text-gray-900">
      Sign in to your account
    </h2>
  </div>
  <div class="sm:mx-auto sm:w-full sm:max-w-md mt-8">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), defaults: { input_html: { class: 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 transition duration-150 ease-in-out sm:text-sm sm:leading-5' }, wrapper_html: { class: 'flex flex-col my-3' } }, label_html: { class: 'block text-sm font-medium leading-5 text-gray-700' }) do |f| %>
        <div>
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.input :email,
              required: false,
              autofocus: true,
              label: 'Enter Your Email',
              input_html: { autocomplete: "email", class: "" } %>
          </div>
        </div>

        <div class="mt-6">
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.input :password,
              required: false,
              label: 'Enter Your Password',
              input_html: { autocomplete: "current-password" } %>
          </div>
        </div>

        <div class="mt-6 flex items-center justify-between">
          <div class="flex items-center">
            <%= f.input :remember_me, input_html: { class: "form-checkbox h-4 w-4 text-indigo-600 mr-2 transition duration-150 ease-in-out" }, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="text-sm leading-5 hidden">
            <a href="#" class="font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:underline transition ease-in-out duration-150">
              Forgot your password?
            </a>
          </div>
        </div>

        <div class="mt-6">
          <span class="block w-full rounded-md shadow-sm">
            <%= f.button :submit, "Sign in", class: 'w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out' %>
          </span>
        </div>
      <% end %>
    </div>
  </div>
</div>

