<div class="max-w-3xl mx-auto">
  <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6 shadow rounded-lg">
    <div class="-ml-4 -mt-2 flex items-center justify-between flex-wrap sm:flex-no-wrap">
      <div class="ml-4 mt-2 flex items-center">
        <h1 class="text-3xl font-medium text-gray-900 mr-2">
          <%= @vehicle.number %>
        </h1>
      </div>
    </div>
  </div>

  <% @vehicle.entries.each do |e| %>
    <div class="bg-white px-4 py-5 border-b border-gray-200 sm:px-6 shadow rounded-lg mt-4">
      <%= e.created_at&.strftime("%m/%d/%Y at %I:%M%p") || 'Yet to be updated' %>
      <div class="px-4 py-5 sm:px-6">
        <dl class="grid grid-cols-2 col-gap-2 row-gap-4 sm:grid-cols-4">
          <div class="sm:col-span-1">
            <dt class="text-sm leading-5 font-medium text-gray-500">
              Location
            </dt>
            <dd class="mt-1 text-sm leading-5 text-gray-900">
              <%= e&.user&.panchayat&.name %>
            </dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm leading-5 font-medium text-gray-500">
              Name of Driver
            </dt>
            <dd class="mt-1 text-sm leading-5 text-gray-900">
              <%= e.name_of_driver %>
            </dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm leading-5 font-medium text-gray-500">
              Number of Driver
            </dt>
            <dd class="mt-1 text-sm leading-5 text-gray-900">
              <%= e.number_of_driver %>
            </dd>
          </div>
          <div class="sm:col-span-1">
            <dt class="text-sm leading-5 font-medium text-gray-500">
              Status
            </dt>
            <dd class="mt-1 text-sm leading-5 text-gray-900">
              <%= e.status %>
            </dd>
          </div>
        </dl>
      </div>
    </div>
  <% end %>
</div>
